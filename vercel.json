{
  "version": 2,
  "buildCommand": "pnpm install && pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "dist",
  "env": {
    "VITE_TURSO_DATABASE_URL": "@turso_database_url",
    "VITE_TURSO_AUTH_TOKEN": "@turso_auth_token"
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
